@model List<Lab.TpEF.MVC.Models.CategoriesView>
@{ 
    ViewBag.Title = "Categories Page";
}

<h1>Categorias:</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categories in Model)
        {
        <tr>
            <th scope="row">@categories.Id</th>
            <td>@categories.Name</td>
            <td>@categories.Description</td>
            <td>@Html.ActionLink("Borrar","Delete", new { id = categories.Id }, new { @class = "btn btn-danger" })</td>
            <td>@Html.ActionLink("Editar", "Update", new { id = categories.Id}, new { @class = "btn btn-warning" })</td>

        </tr>
        }
    </tbody>
</table>
<div>
    @Html.ActionLink("insertar nueva categoria", "Insert", null, new { @class = "btn btn-primary btn-lg" })
</div>