@model List<Lab.TpEF.MVC.Models.ApiView>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Categorias</h1>
    <p class="lead">Agregar, Editar o Borrar Categorias</p>
    <p>@Html.ActionLink("Ver Listado", "index", "Categories", null, new { @class = "btn btn-primary btn-lg" })</p>
</div>

<div class="card">
    <div class="card-header">
        Digimons API
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Level</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Name</th>
                        <td>@item.Level</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

